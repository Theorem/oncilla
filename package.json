{
  "name": "oncilla",
  "version": "2.3.1",
  "description": "Client-side database for real-time and optimistic UI",
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production tsc",
    "ci": "npm run verify",
    "format": "prettier --write '{src,typings}/**/*.{json,md,ts}' *.{json,md,ts}",
    "format-verify": "prettier --check '{src,typings}/**/*.{json,md,ts}' *.{json,md,ts}",
    "lint": "tslint --project .",
    "prepublishOnly": "npm run verify && npm run build",
    "start": "ava --watch",
    "start-building": "rm -rf dist && NODE_ENV=production tsc --watch",
    "test": "ava",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run format-verify && npm run lint && npm run test"
  },
  "dependencies": {
    "nanoevents": "^1.0.8",
    "reconnecting-websocket": "^4.1.10",
    "ws": "^6.2.1"
  },
  "devDependencies": {
    "@types/nanoevents": "^1.0.0",
    "@types/react": "^16.8.13",
    "@types/ws": "^6.0.1",
    "ava": "^1.4.1",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-no-circular-imports": "^0.6.2",
    "typescript": "^3.3.4000"
  },
  "browser": "dist/index.js",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=6.6"
  },
  "files": [
    "dist/**/*"
  ],
  "license": "ISC",
  "main": "dist/index.js",
  "repository": "git@github.com:citrusbyte/oncilla.git",
  "sideEffects": false,
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "ts",
      "tsx"
    ],
    "files": [
      "src/**/*.test.{js,jsx,ts,tsx}"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "sources": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
