{
  "name": "oncilla",
  "version": "1.0.0",
  "description": "Client-side database for real-time and optimistic UI",
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production tsc",
    "ci": "npm run verify",
    "format": "prettier --write '{src,typings}/**/*.{json,md,ts}' *.{json,md,ts}",
    "format-verify": "prettier --check '{src,typings}/**/*.{json,md,ts}' *.{json,md,ts}",
    "prepublishOnly": "npm run verify && npm run build",
    "start": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run format-verify"
  },
  "dependencies": {
    "nanoevents": "^1.0.8",
    "reconnecting-websocket": "^4.1.10",
    "ws": "^6.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@types/nanoevents": "^1.0.0",
    "@types/react": "^16.8.13",
    "@types/ws": "^6.0.1",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "typescript": "^3.3.4000"
  },
  "browser": "dist/index.js",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=6.6"
  },
  "license": "ISC",
  "main": "dist/index.js",
  "repository": "git@github.com:citrusbyte/oncilla.git",
  "sideEffects": false
}
