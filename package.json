{
  "name": "oncilla",
  "version": "5.4.1",
  "description": "Client-side database for real-time and optimistic UI",
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production tsc --project tsconfig.build.json",
    "ci": "npm run verify",
    "format": "prettier --write '{src,typings}/**/*.{json,md,ts}' *.{json,md,ts}",
    "format-verify": "prettier --check '{src,typings}/**/*.{json,md,ts}' *.{json,md,ts}",
    "lint": "eslint --ext js,jsx,ts,tsx src",
    "prepublishOnly": "npm run verify && npm run build",
    "start": "ava --watch",
    "start-building": "rm -rf dist && NODE_ENV=production tsc --watch",
    "start-workbench-server": "node workbench/runMemory.js",
    "start-workbench-ui": "NODE_ENV=development webpack-dev-server --config workbench/webpack.config.js --history-api-fallback --hot --client-log-level warning --host 127.0.0.1 --port 3089",
    "test": "ava",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run format-verify && npm run lint && npm run test"
  },
  "dependencies": {
    "nanoevents": "^2.0.0",
    "reconnecting-websocket": "^4.2.0",
    "ws": "^7.1.1"
  },
  "devDependencies": {
    "@theorem/eslint-plugin": "^1.0.0",
    "@types/nanoevents": "^1.0.0",
    "@types/react": "^16.8.13",
    "@types/ws": "^6.0.1",
    "ava": "^2.2.0",
    "eslint": "^6.8.0",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-no-circular-imports": "^0.6.2",
    "typescript": "^3.3.4000",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "browser": "dist/index.js",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=6.6"
  },
  "files": [
    "dist/**/*"
  ],
  "license": "ISC",
  "main": "dist/index.js",
  "repository": "git@github.com:Theorem/oncilla.git",
  "sideEffects": false,
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "ts",
      "tsx"
    ],
    "files": [
      "src/**/*.test.{js,jsx,ts,tsx}"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "sources": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "timeout": "3s"
  }
}
